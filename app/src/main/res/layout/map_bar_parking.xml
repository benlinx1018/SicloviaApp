<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="135dp"
        android:id="@+id/map_bar_parking_bg"
        android:layout_alignParentTop="true"
        android:src="@drawable/map_bar_parking"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/map_bar_parking_icon"
        android:src="@drawable/map_bar_parking_icon"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Parking"
        android:id="@+id/map_bar_parking_icon_name"
        android:layout_below="@+id/map_bar_parking_icon"
        android:layout_alignStart="@+id/map_bar_parking_icon"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="-4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Parking Locations"
        android:id="@+id/map_bar_parking_info_title"
        android:layout_alignTop="@+id/map_bar_parking_icon"
        android:layout_alignLeft="@+id/map_bar_parking_icon"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="70dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Alamo Parking\nCentral Parking\nFlat Lot Parking\nBrackenridge Park"
        android:id="@+id/map_bar_parking_info_name"
        android:layout_alignBottom="@+id/map_bar_parking_icon"
        android:layout_alignStart="@+id/map_bar_parking_info_title"
        android:layout_marginBottom="-20dp"
        android:layout_marginStart="10dp"
        android:editable="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/map_bar_parking_info_road"
        android:layout_alignBottom="@+id/map_bar_parking_icon"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="-20dp"
        android:editable="true"/>
</RelativeLayout>