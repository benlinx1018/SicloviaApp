<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
    >


<ImageView
    android:layout_margin="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:adjustViewBounds="true"
    android:src="@drawable/sponsor_title" />

    <ImageView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/sponser_subtitle" />

    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/sponsor_list"
        android:name="com.siclovia.tang.siclovia.SponsorFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.siclovia.tang.siclovia.SponsorFragment"
        tools:listitem="@layout/fragment_sponsor" />

</LinearLayout>
